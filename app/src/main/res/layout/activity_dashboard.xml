<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard"
    android:background="@drawable/a2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/imgv1"
            android:layout_height="wrap_content"
            android:src="@drawable/gph1"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imgv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgv1"
            android:src="@drawable/ghp2"
            android:visibility="visible"
            android:padding="15dp"/>


        <ImageView
            android:id="@+id/imgv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgv2"
            android:src="@drawable/gph5"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/imgv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgv3"
            android:src="@drawable/gph3"
            android:visibility="visible"
            android:padding="15dp"/>


        <ImageView
            android:id="@+id/imgv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgv4"
            android:src="@drawable/gph4"
            android:visibility="visible" />

    </RelativeLayout>
</ScrollView>