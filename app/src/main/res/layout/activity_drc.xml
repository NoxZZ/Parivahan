<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbarStyle="insideOverlay"
    android:visibility="visible"
    android:background="@drawable/a2"
    tools:context=".drc">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/drc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Duplicate RC"
            android:textSize="26sp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/drc"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="About" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@+id/textView1"
            android:text="\t\t\tWhen a registration certificate of a vehicle is reported to be lost, mutilated, torn or used-up, duplicate registration certificate is issued to the registered owner."
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="Guidelines" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@+id/textView3"
            android:text="\n\t -> If at any time, the certificate of registration is lost or destroyed, report to the police station in the jurisdiction of which the loss or destruction has occurred and intimate that fact in writing to the registering authority by whom the certificate of registration was issued
\n\t -> Apply for duplicate certificate of registration to the last registering authority in Form 26
\n\t -> Pay appropriate fee as specified in Rule 81 of the Central Motor Vehicle Rules 1989"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView4"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="Documents required" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@+id/textView5"
            android:text="\n\t -> Application in Form 26
\n\t -> Police certificate
\n\t -> Pollution under control certificate
\n\t -> Valid insurance certificate*
\n\t -> Proof of address*
\n\t -> Challan clearance from traffic police and Enforcement wing Transport Department in commercial vehicles*
\n\t -> Tax clearance from Accounts Department in commercial vehicles*
\n\t -> Attested copy of PAN Card or Form 60 and Form 61(as applicable)*
\n\t -> Chassis and Engine Pencil Print*
\n\t -> Signature Identification of owner*
\n\t -> Affidavit stating that RC is lost and has not been impounded*
"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView6"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="Reference" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@+id/textView7"
            android:text="\n\t -> The Motor Vehicles Act 1988 (Section 41 of Chapter IV)
\n\t -> The Central Motor Vehicles Rules 1989 (Rule 53)
\n\t -> State transport official websites
\n\nDocuments marked with asterisk (*) may be required in some states.\n\n"
            android:textSize="15dp"/>



    </RelativeLayout>

</ScrollView>


