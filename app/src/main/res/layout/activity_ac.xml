<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbarStyle="insideOverlay"
    android:visibility="visible"
    android:background="@drawable/a2"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ac">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Address Change"
            android:textSize="26sp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ac"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="About" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@+id/textView1"
            android:text="\t\t\tThe Motor Vehicle Act 1988 gives provision to apply for recording a change of residence address of registered owner in the certificate of registration of the motor vehicle."
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_below="@id/textView2"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="Guidelines"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="8dp"
            android:layout_below="@+id/textView3"
            android:text="\n\t -> Apply for recording the change in residence (within 14 days of address changed) in the certificate of registration of a motor vehicle of the registered owner of the vehicle in Form 33
\n\t -> Pay appropriate fee as specified in rule 81 of the Central Motor Vehicle Rules 1989"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_below="@+id/textView4"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="Documents required"
            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="8dp"
            android:layout_below="@+id/textView5"
            android:text="\n\t -> Application in Form 33
\n\t -> Certificate of registration
\n\t -> Proof of new address
\n\t -> Valid insurance certificate
\n\t -> Pollution under control certificate
\n\t -> No Objection Certificate from financier (in case of hypothecation)*
\n\t -> Smart card fee*
\n\t -> Attested cop of PAN card or Form 60 and Form 61(as applicable)*
\n\t -> Chassis and Engine Pencil Print*
\n\t -> Signature Identification of owner*"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_below="@+id/textView6"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="Reference"
            />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="8dp"
            android:layout_below="@+id/textView7"
            android:text="\n\t -> The Motor Vehicles Act 1988 (Section 49 of Chapter IV)
\n\t -> The Central Motor Vehicles Rules 1989 (Rule 59)
\n\t -> State transport official websites\n\nDocuments marked with asterisk (*) may be required in some states.\n\n"
            android:textSize="15dp"/>

    </RelativeLayout>

</ScrollView>

